<div class="container my-vh-2">
  <div class="row d-flex justify-content-center">
    <div class="col-12 col-lg-8 my-4 text-center">
      <h1 class="display-1">
        <img src="{{ '/img/teal.svg' | url }}" alt={{ metadata.author }} height="25%" width="50%"><br>
        {{ metadata.tagline }}
      </h1>
      <p class="lead mb-4">{{ metadata.description }}</p>
      <a class="btn btn-primary px-5 py-3 me-4 position-relative" href="{{ metadata.docs }}" target="_blank" rel="noopener" >Get started
        </a>
      <a class="link-fancy py-2" href="{{ metadata.spec }}">Read the spec
      </a>
    </div>
  </div>
</div>